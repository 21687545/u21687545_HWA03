@using u21687545_HWA03.Models
@Model List <FileModel>
    @{
        ViewBag.Title = "Index";
    }

   
                @foreach (var Images in Model)
                {
                    <div class="col-md-8">
                       <img src="~/Gallery/Images/@Images.FileName" style="height:300px" />
                       <p>@Images.FileName</p>
                       <button
                           type= "button" class="btn btn-success"> @Html.ActionLink("Download", "DownloadFile", new { fileName = Images.FileName })
                       </button>
                       
                       
                       <button type="button" class="btn btn-danger">
                           @Html.ActionLink("DELETE", "DeleteFile",
                           new { fileName = Images.FileName },
                           new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                       </button>
                       
                   </div>
                        
                }

